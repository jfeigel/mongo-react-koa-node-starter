{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": ["./src", "./server"],
    "includePattern": "\\.(js|jsx)$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "plugins": ["plugins/markdown", "node_modules/better-docs/category"],
  "opts": {
    "encoding": "utf8",
    "destination": "docs/",
    "recurse": true,
    "readme": "README.md",
    "template": "node_modules/better-docs"
  },
  "templates": {
    "default": {
      "staticFiles": {
        "include": ["./src/images/logo.png"]
      }
    },
    "better-docs": {
      "title": "MongoDB React Koa Node Starter Kit Documentation",
      "name": "MongoDB React Koa Node Starter Kit Documentation",
      "logo": "logo.png",
      "navigation": [
        {
          "label": "GitHub",
          "href": "https://github.com/jfeigel/mongo-react-koa-node-starter"
        }
      ]
    }
  }
}
